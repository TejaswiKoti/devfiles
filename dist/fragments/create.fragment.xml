<core:FragmentDefinition
    xmlns="sap.m"
    displayBlock="true"
    xmlns:u="sap.ui.unified"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="idCreateFrag"
        class="sapUiResponsiveContentPadding"
        title="Create" contentWidth="400px"
    >
        <content>
            <Label
                required="true"
                text="LocationId"
            />
            <Input
                id="lId"
                value="" 
            /> 
            <Label
                required="true"
                text="Location Description"
            />
            <Input
                id="lDesc"
                value=""
            />
            <Label
                required="true"
                text="Location Type"
            />
            <Input
                id="lType"
                value=""
            />
             <Label
                required="true"
                text="Latitude"
            />
            <Input
                id="lat"
                value=""
            />
             <Label
                required="true"
                text="Longitude"
            />
            <Input
                id="long"
                value=""
            />
            <Label
                required="true"
                text="ReserveField1"
            />
            <Input
                id="resField1"
                value=""
            />
            <Label
                required="true"
                text="ReserveField2"
            />
            <Input
                id="resField2"
                value=""
            />
            <Label
                required="true"
                text="ReserveField3"
            />
            <Input
                id="resField3"
                value=""
            />
            <Label
                required="true"
                text="ReserveField4"
            />
            <Input
                id="resField4"
                value=""
            />
            <Label
                required="true"
                text="ReserveField5"
            />
            <Input
                id="resField5"
                value=""
            />
             <Label
                required="true"
                text="Auth Group"
            />
            <Input
                id="auth"
                value=""
            />
         
        </content>
        <beginButton>
            <Button
                id="idBtn"
                text="Save"
                press="onSave"
            />
        </beginButton>

        <endButton>
            <Button
                text="Cancel"
                type="Ghost"
                press="onCancel"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
